static void
do_mygem(fpath)
  char *fpath;
{
  HDR hdr;
  char folder[64];

  usr_fpath(folder, cuser.userid, "gem/.DIR");
  hdr_stamp(folder, HDR_COPY | 'A', &hdr, fpath);

  strcpy(hdr.owner, cuser.userid);
  strcpy(hdr.title, ve_title);

  rec_add(folder, &hdr, sizeof(HDR));
}

