#include <time.h>


int
main()
{
  struct tm ptime;

  /* 2001 ¦~ 5 ¤ë 6 ¤é */
  ptime.tm_sec = 0;
  ptime.tm_min = 0;
  ptime.tm_hour = 0;
  ptime.tm_mday = 6;
  ptime.tm_mon = 5 - 1;
  ptime.tm_year = 2001 - 100;
  ptime.tm_isdst = 0;
  ptime.tm_zone = "GMT";
  ptime.tm_gmtoff = 0;

  printf("%d\n", mktime(&ptime));
}

