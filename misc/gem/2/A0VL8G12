static int          /* qazq.030815: ¯¸¤è³B²z§¹¦¨¼Ð°O¢á*/
post_done_mark(xo)
  XO *xo;
{
  if (HAS_PERM(PERM_SYSOP)) /* qazq.030815: ¥u¦³¯¸ªø¥i¥H¼Ð°O */
  {
    HDR *hdr;
    int pos, cur, xmode;

    pos = xo->pos;
    cur = pos - xo->top;
    hdr = (HDR *) xo_pool + cur;
    xmode = hdr->xmode;

#ifdef HAVE_LABELMARK
    if (xmode & POST_DELETE)    /* «Ý¬åªº¤å³¹¤£¯à mark */
      return XO_NONE;
#endif

    hdr->xmode = xmode ^ POST_DONE;
    currchrono = hdr->chrono;

    rec_put(xo->dir, hdr, sizeof(HDR), xo->key == XZ_XPOST ?
      hdr->xid : pos, cmpchrono);
    move(3 + cur, 7);
    outc(post_attr(hdr));
  }
  return XO_NONE;
}




