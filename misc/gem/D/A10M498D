  ptitle[0] = strtok(buf_title, "\n");
  for (i = 0; i < 5; i++)
  {
    if (!(ptitle[i] = strtok(NULL, "\n")))
      break;
  }
  ptitle[i] = NULL;     /* tsaikd.041005: ³Ì«á¤@­Ó¥²»Ý¬O NULL */

  /* tsaikd.041005: µe¥X¤WÃä½u */
