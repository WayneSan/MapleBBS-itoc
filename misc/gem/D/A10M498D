static int      /* ¦^¶ÇÁ`¦@¦³´X­Ó¿ï¶µ */
draw_menu(x, y, title, desc, hotkey, cur)
  int x, y;
  char *title;
  char *desc[];
  char hotkey;
  int *cur;     /* ¦^¶Ç¹w³]­È©Ò¦b¦ì¸m */
{
  int i, meet;
  char buf[128];

  /* tsaikd.041005: title ³Ì¤j¥i¥H©ñ¤­¦æ¡A³Ì«á¤@­Ó¥²»Ý¬O NULL */
