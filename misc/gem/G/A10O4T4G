#include "bbs.h"


#define OUTFILE_LOTTERY   "run/lottery.result"


/* lottery_num[0~5] ¬O¤@¯ë¸¹½X¡Flottery_num[6] ¬O¯S§O¸¹ */
static int lottery_num[6];

/* lottery_win[0~6] ¨Ì§Ç¬O¤¤¦U¼ú¶µªºª`¼Æ
   0:´¶¼ú 1:³°¼ú 2:¥î¼ú 3:¸v¼ú 4:°Ñ¼ú 5:¶L¼ú 6:ÀY¼ú */
static int lottery_win[7];

static double totalmoney;     /* Á`©ãª÷ */

/* eachmoney[0~6] ¨Ì§Ç¬O¦U¼ú¶µªº¼úª÷
   0:´¶¼ú 1:³°¼ú 2:¥î¼ú 3:¸v¼ú 4:°Ñ¼ú 5:¶L¼ú 6:ÀY¼ú */
static int eachmoney[7];

static FILE *flog;


/*-------------------------------------------------------*/
/* µo¼úª÷                                                */
/*-------------------------------------------------------*/


static void
add_money(log)
  BUY_LOTTERY *log;
{
  char fpath[64];
  PAYCHECK paycheck;
  static char name[7][3] = {"´¶", "³°", "¥î", "¸v", "°Ñ", "¶L", "ÀY"};

  memset(&paycheck, 0, sizeof(PAYCHECK));
  time(&paycheck.tissue);
  paycheck.money = eachmoney[log->prize];
  sprintf(paycheck.reason, "¤j¼Ö³z%s¼ú¼úª÷", name[log->prize]);

  usr_fpath(fpath, log->userid, FN_PAYCHECK);
  rec_add(fpath, &paycheck, sizeof(PAYCHECK));

  fprintf(flog, "  %-13s±m¨é¸¹½X¬° %02d %02d %02d %02d %02d %02d¡A"
    "¤¤¤F%s¼ú %d ¤¸\n",
    log->userid, log->num[0], log->num[1], log->num[2],
    log->num[3], log->num[4], log->num[5], name[log->prize], paycheck.money);
}


static void
mail_lottery(log)       /* itoc.011115: ±HÀÉ®×µ¹ userid */
  BUY_LOTTERY *log;
{
  int i;
  char folder[64];
  HDR hdr;
  static char userid[IDLEN + 1];
  static char fpath[64];
  static FILE *fp;

  /* log[] ­n¨Ì log->userid ¨Ó±Æ§Ç */
  /* ¦P¤@¦ì¨Ï¥ÎªÌ¥i¯à¦³¦h±i±m¨é¤¤¼ú¡A¦b¦P¤@«Ê«H¸Ì­±·|§â©Ò¦³©ú²Ó³£¼g¥X¨Ó */

  if (strcmp(userid, log->userid))   /* ·sªº userid */
  {
    /* ±N«e¤@¤¤¼ú¤Hªº«H±H¥X */
    if (fp)
    {
      fclose(fp);

      usr_fpath(folder, userid, FN_DIR);
      hdr_stamp(folder, HDR_LINK, &hdr, fpath);
      strcpy(hdr.owner, STR_SYSOP);
      strcpy(hdr.nick, SYSOPNICK);
      strcpy(hdr.title, "±m¨éµo¿ú");
      rec_add(folder, &hdr, sizeof(HDR));

      unlink(fpath);
    }

    if (!log->userid[0])   /* ¤w±H¥X³Ì«á¤@¦ì¤¤¼ú¤H³qª¾«H */
      return;

    /* ¶}©l·Ç³Æ·s¤¤¼ú¤Hªº«H */
    strcpy(userid, log->userid);

    sprintf(fpath, "tmp/lottery.%s", userid);
    if (fp = fopen(fpath, "w"))
    {
      /* ¤å³¹ÀÉÀY */
      fprintf(fp, "%s %s (%s)\n", STR_AUTHOR1, STR_SYSOP, SYSOPNICK);
      fprintf(fp, "¼ÐÃD: ±m¨éµo¿ú\n®É¶¡: %s\n\n", Now());

      /* ¤å³¹¤º®e */
      fprintf(fp, "     ¥»´Á¼Ö³z¤¤¼ú¸¹½X¬°¡G\n\n          ");
      for (i = 0; i < 6; i++)
        fprintf(fp, "%02d  ", lottery_num[i]);
      fprintf(fp, "\n\n     ¥»´Á¼Ö³z¯S§O¸¹½X¬°¡G%\n\n          ");
      fprintf(fp, "%02d\n\n", lottery_num[6]);
    }
  }

  fprintf(fp, "     ±z©ÒÁÊ¶Rªº¸¹½X¬°¡G\n\n          ");
  for (i = 0; i < 6; i++)
    fprintf(fp, "%02d  ", log->num[i]);

  fprintf(fp, "®¥³ß±zÄ¹±o %d ¤¸¡A¸Ô²Ó¤¤¼ú°O¿ý½Ð°Ñ¦Ò %s ªO\n",
    eachmoney[log->prize], BN_RECORD);
}


