static void
forward_mail(hdr, folder, userid)
  HDR *hdr;
  char *folder;
  char *userid;
{
  FILE *fp;
  char ip[80], fpath[64];

  usr_fpath(ip, userid, FN_FORWARD);
  if (fp = fopen(ip, "r"))
  {
    fscanf(fp, "%s", ip);
    fclose(fp);

    if (ip[0])
    {
      hdr_fpath(fpath, folder, hdr);
      bbsmtp(fpath, hdr->title, ip, hdr->owner);
    }
  }
}

