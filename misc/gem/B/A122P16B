/* cuser.userid ±N¡u¼ÐÃD title¡BÀÉ®×¦b fpath¡vªº«H¥ó±Hµ¹ userid ªº¥~³¡«H½c */
static void
forward_mail(fpath, userid, title)
  char *fpath, *userid, *title;
{
  FILE *fp;
  char ip[80];

  usr_fpath(ip, userid, FN_FORWARD);
  if (fp = fopen(ip, "r"))
  {
    fscanf(fp, "%s", ip);
    fclose(fp);

    if (ip[0])
      bsmtp(fpath, title, ip, 0);
  }
}

