static char *Brdname = "Kimo_Movies";     /* ±ý post ªº¬ÝªO */
static char *Userid = "©_¼¯¹q¼v";   /* §@ªÌ */
static char *Username = "³Ì·s¹q¼v"; /* ¼ÊºÙ */


static void
new_post(fpath, title)           /* µo¤å¨ì¬ÝªO */
  char *fpath;          /* ÀÉ®×¸ô®| */
  char *title;          /* ¤å³¹¼ÐÃD */
{
  HDR hdr;
  char folder[64];

  brd_fpath(folder, Brdname, FN_DIR);
  hdr_stamp(folder, HDR_LINK | 'A', &hdr, fpath);
  strcpy(hdr.owner, Userid);
  strcpy(hdr.nick, Username);
  strcpy(hdr.title, title);
  rec_add(folder, &hdr, sizeof(HDR));

  update_btime(Brdname);
}


