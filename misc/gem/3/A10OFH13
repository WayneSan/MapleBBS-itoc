#include "bbs.h"


#define LYNX_PATH       "/usr/local/bin/lynx --source"  /* lynx ªºµ´¹ï¸ô®| */


/*-------------------------------------------------------*/
/* BRD shm ³¡¤À¶·»P cache.c ¬Û®e                         */
