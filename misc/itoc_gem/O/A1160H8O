: bbsd.c:m_overflow() ¥[¦b tn_motd() «e­±

static int          /* 1:¹L¤j */
m_overflow()
{
  int total_size, limit;
  char fpath[64], *ptr, *str;
  struct stat st;
  struct dirent *de;
  DIR *dirp;

  usr_fpath(fpath, cuser.userid, fn_dir);

  if (stat(fpath, &st))
    return 0;

  /* ¤W­­´X½g */
  if (HAS_PERM(PERM_MBOX))
    limit = MAX_BBSMAIL;
  else if (HAS_PERM(PERM_VALID))
    limit = MAX_VALIDMAIL;
  else
    limit = MAX_NOVALIDMAIL;
  if (st.st_size > sizeof(HDR) * limit)
    return 1;

  ptr = (char *) strchr(fpath, '.');
  *ptr++ = '@';
  *ptr = '\0';

  if (dirp = opendir(fpath))
  {
    /* ®e¶q´X byte */
    if (HAS_PERM(PERM_MBOX))
      limit = MAX_BBSMAILSIZE;
    else if (HAS_PERM(PERM_VALID))
      limit = MAX_VALIDMAILSIZE;
    else
      limit = MAX_NOVALIDMAILSIZE;

    *ptr++ = '/';
    total_size = 0;
    while (de = readdir(dirp))
    {
      str = de->d_name;
      if (*str <= ' ' || *str == '.')
        continue;
      strcpy(ptr, str);
      if (!stat(fpath, &st))
      {
        total_size += st.st_size;
        if (total_size > limit)
        {
          closedir(dirp);
          return 1;
        }
      }
    }
    closedir(dirp);
  }

  return 0;
}

