void
my_query2(hdr)
  HDR *hdr;
{
  ACCT acct;

  if (acct_load(&acct, hdr->owner) >= 0)
    do_query(&acct);
  else
  {
    utmp_mode(M_QUERY);
    prints("[±b¸¹] %-12s [¼ÊºÙ] %-16.16s\n",
      hdr->owner, hdr->nick);
    vmsg(NULL);
  }
}

