static void kill_killer_over(room,cu)
  ChatRoom *room;
  ChatUser *cu;
{
  if(cu->killflag & KILL_KNOCKOUT)
  {
    send_to_user(cu,"\033[1;35m$$ 你的魂靈還沒有回到身體裡呢\033[0m",0,MSG_MESS
AGE);
